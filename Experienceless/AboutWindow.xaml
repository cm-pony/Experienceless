<Window x:Class="Experienceless.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Experienceless"
        mc:Ignorable="d"
        Title="About" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="140"/>
            <RowDefinition Height="50"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Image x:Name="image" Height="128" VerticalAlignment="Top" Source="Resources/logo.png"  HorizontalAlignment="Center" Width="128"/>
        <TextBlock x:Name="txtTitle" Text="placeholder" HorizontalAlignment="Center" Grid.Row="1" TextWrapping="NoWrap" VerticalAlignment="Top" FontSize="24" Height="32" />
        <TextBlock HorizontalAlignment="Center" Grid.Row="2" TextWrapping="NoWrap" VerticalAlignment="Top"  >
            Developed by 
            <Hyperlink NavigateUri="https://www.patreon.com/cm_pony" TargetName="_blank" RequestNavigate="OpenLink" >
                <Hyperlink.Inlines>
                    <Run Text="rainberry"/>
                </Hyperlink.Inlines>
            </Hyperlink>
        </TextBlock>

    </Grid>
</Window>
